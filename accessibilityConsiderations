          ],
          impairments: ['Cognitive disabilities', 'Learning disabilities', 'Anxiety disorders']
        }
      ]
    };

    // Get references to DOM elements
    const featureSelect = document.getElementById('feature-select');
    const submitBtn = document.getElementById('submit-btn');
    const resultsDiv = document.getElementById('results');

    // Enable the button when a valid feature is selected
    featureSelect.addEventListener('change', () => {
      submitBtn.disabled = featureSelect.value === "";
      // Hide previous results when changing the selection
      resultsDiv.classList.add('hidden');
      resultsDiv.innerHTML = '';
    });

    // Display the accessibility considerations on button click
    submitBtn.addEventListener('click', () => {
      const feature = featureSelect.value;
      if (!feature) return;
      
      const considerations = accessibilityConsiderations[feature];
      if (!considerations) {
        resultsDiv.innerHTML = 'No accessibility considerations available for this feature.';
        resultsDiv.classList.remove('hidden');
        return;
      }
      
      let html = '';
      // Create a heading for the results using the selected feature’s name
      const featureName = featureSelect.options[featureSelect.selectedIndex].text;
      html += `<h2>Accessibility Considerations for ${featureName}</h2>`;
      
      // Create a button to copy ALL considerations for the product feature
      html += `<button id="copyAllBtn" style="margin-bottom:16px;">Copy all</button>`;
      
      // Render each principle section
      considerations.forEach(item => {
        html += `<div class="section">`;
        html += `<h3>${item.principle}</h3>`;
        html += '<ul>';
        item.considerations.forEach(concern => {
          html += `<li>${concern}</li>`;
        });
        html += '</ul>';
        if (item.impairments && item.impairments.length > 0) {
          html += `<p class="impAdd"><strong>Impairments Addressed:</strong> ${item.impairments.join(', ')}</p>`;
        }
        // Create a copy button for this principle’s considerations
        html += `<button class="copyBtn">Copy ${item.principle}</button>`;
        html += `</div>`;
      });
      
      resultsDiv.innerHTML = html;
      resultsDiv.classList.remove('hidden');

      // Copy all considerations event listener
      document.getElementById('copyAllBtn').addEventListener('click', () => {
        let content = `<div><h2>Accessibility Considerations for ${featureName}</h2>`;
        considerations.forEach(item => {
          content += `<h3>${item.principle}</h3><ul>`;
          item.considerations.forEach(concern => {
            content += `<li>${concern}</li>`;
          });
          content += '</ul>';
        });
        content += '</div>';
        const blob = new Blob([content], { type: 'text/html' });
        const clipboardItem = new ClipboardItem({ 'text/html': blob });
        navigator.clipboard.write([clipboardItem])
          .then(() => {
            const copyAllBtn = document.getElementById('copyAllBtn');
            const originalText = copyAllBtn.textContent;
            copyAllBtn.textContent = "Copied!";
            setTimeout(() => { copyAllBtn.textContent = originalText; }, 2000);
          })
          .catch(err => console.error("Failed to copy: ", err));
      });

      // Add event listeners for individual copy buttons
      const copyButtons = document.querySelectorAll('.copyBtn');
      copyButtons.forEach((btn, index) => {
        btn.addEventListener('click', () => {
          let content = `<div><h2>Accessibility Considerations for ${featureName}</h2>`;
          const item = considerations[index];
          content += `<h3>${item.principle}</h3><ul>`;
          item.considerations.forEach(concern => {
            content += `<li>${concern}</li>`;
          });
          content += '</ul></div>';
          const blob = new Blob([content], { type: 'text/html' });
          const clipboardItem = new ClipboardItem({ 'text/html': blob });
          navigator.clipboard.write([clipboardItem])
            .then(() => {
              const originalText = btn.textContent;
              btn.textContent = "Copied!";
              setTimeout(() => { btn.textContent = originalText; }, 2000);
            })
            .catch(err => console.error("Failed to copy: ", err));
        });
      });
    });
  </script>
</body>
</html>
