javascript:(function(){if(document.getElementById('search-layer'))return;var e=document.createElement('div');e.id='search-layer',e.style.position='fixed',e.style.top='10px',e.style.right='10px',e.style.width='300px',e.style.padding='10px',e.style.backgroundColor='white',e.style.border='1px solid black',e.style.zIndex='9999',e.style.fontFamily='Arial,sans-serif';var t=document.createElement('input');t.type='text',t.id='search-input',t.style.width='calc(100% - 20px)',t.style.marginBottom='10px',e.appendChild(t);var n=document.createElement('button');n.innerHTML='Search',n.style.marginRight='5px',e.appendChild(n);var l=document.createElement('button');l.innerHTML='Clear',e.appendChild(l);var o=document.createElement('button');o.innerHTML='Close',o.style.float='right',e.appendChild(o);var r=document.createElement('div');r.id='results-container',r.style.marginTop='10px',r.style.maxHeight='200px',r.style.overflowY='auto',e.appendChild(r),document.body.appendChild(e),n.onclick=function(){var e=t.value.toLowerCase(),n=[];if(r.innerHTML='',e){for(var l=document.createTreeWalker(document.body,NodeFilter.SHOW_TEXT,null,!1);l.nextNode();){var o=l.currentNode,a=o.nodeValue.toLowerCase().indexOf(e);if(-1!==a){var i=o.parentNode,c=document.createElement('div');c.style.cursor='pointer',c.style.padding='5px',c.style.borderBottom='1px solid #ddd';var s=o.nodeValue.substring(0,a)+'<b>'+o.nodeValue.substring(a,a+e.length)+'</b>'+o.nodeValue.substring(a+e.length);c.innerHTML=s,c.onclick=function(e,t,n){return function(){var l=document.createRange(),o=window.getSelection();l.setStart(e,t),l.setEnd(e,t+n.length),o.removeAllRanges(),o.addRange(l),e.parentNode.scrollIntoView({behavior:'smooth',block:'center'});var a=document.createElement('span');a.style.backgroundColor='yellow',a.innerHTML=e.nodeValue.substring(t,t+n.length),e.parentNode.innerHTML=e.nodeValue.substring(0,t)+a.outerHTML+e.nodeValue.substring(t+n.length),setTimeout(function(){e.parentNode.innerHTML=e.nodeValue},2e3)}}(o,a,e),r.appendChild(c),n.push(c)}}0===n.length&&(r.innerHTML='<div>No results found</div>')}},l.onclick=function(){t.value='',r.innerHTML=''},o.onclick=function(){document.body.removeChild(e)}})();
