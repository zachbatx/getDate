javascript:(function(){if(document.getElementById('search-layer'))return;var e=document.createElement('div');e.id='search-layer',e.style.position='fixed',e.style.top='10px',e.style.right='10px',e.style.width='300px',e.style.padding='10px',e.style.backgroundColor='white',e.style.border='1px solid black',e.style.zIndex='9999',e.style.fontFamily='Arial,sans-serif';var t=document.createElement('input');t.type='text',t.id='search-input',t.style.width='calc(100% - 20px)',t.style.marginBottom='10px',e.appendChild(t);var n=document.createElement('button');n.innerHTML='Search',n.style.marginRight='5px',e.appendChild(n);var l=document.createElement('button');l.innerHTML='Clear',e.appendChild(l);var o=document.createElement('button');o.innerHTML='Close',o.style.float='right',e.appendChild(o);var r=document.createElement('div');r.id='results-container',r.style.marginTop='10px',r.style.maxHeight='200px',r.style.overflowY='auto',e.appendChild(r),document.body.appendChild(e),n.onclick=function(){var e=t.value.toLowerCase();if(r.innerHTML='',e){var n=[];document.body.querySelectorAll('body *:not(script):not(style):not(head):not(noscript):not(iframe):not(canvas):not(audio):not(video)').forEach(function(t){if(0===t.children.length){var l=t.textContent||t.innerText;if(l.toLowerCase().includes(e)){var o=l.toLowerCase().indexOf(e),a=o+e.length,i=document.createElement('div');i.style.cursor='pointer',i.style.padding='5px',i.style.borderBottom='1px solid #ddd',i.innerHTML=l.substring(0,o)+'<b>'+l.substring(o,a)+'</b>'+l.substring(a),i.onclick=function(){t.scrollIntoView({behavior:'smooth',block:'center'});var n=t.innerHTML,l=n.substring(0,o)+'<span style="background-color: yellow;">'+n.substring(o,a)+'</span>'+n.substring(a);t.innerHTML=l,setTimeout(function(){t.innerHTML=n},2e3)},r.appendChild(i),n.push(i)}}}),0===n.length&&(r.innerHTML='<div>No results found</div>')}},l.onclick=function(){t.value='',r.innerHTML=''},o.onclick=function(){document.body.removeChild(e)}})();
