            background-color: #f4f4f4;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        /* Responsive styling */
        @media (max-width: 90%) {
            .plugin_pagetree_children_list {
                flex-direction: column;
            }

            .plugin_pagetree_children_list li {
                width: 100%;
            }
        }
    </style>
